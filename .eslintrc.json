{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "jest.config.js",
    "ormconfig.js",
    "babel.config.js"
  ],
  "rules": {
    "no-use-before-define": "off",
    "space-before-function-paren": "off",
    "no-redeclare": "off"
  }
}
